<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FashionQuiz" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="TvMainDescription">
        <item name="android:gravity">center</item>
        <item name="android:typeface">serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/DarkPurple</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
    </style>

    <style name="TvMainName">
        <item name="android:gravity">left</item>
        <item name="android:typeface">serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/DarkPurple</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
    </style>
    <style name="MainButton">
     <item name="background">@drawable/button_rounded_corners</item>
        <item name="android:textColor">@color/LightPink</item>
        <item name="android:typeface">serif</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">italic</item>
    </style>
    <style name="QuestionsStyle">
        <item name="android:gravity">left</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/DarkPurple</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginTop">8dp</item>

    </style>
    <style name="RadioButtonsStyle">
        <item name="android:textColor">@color/DarkPurple</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">15sp</item>
    </style>
</resources>